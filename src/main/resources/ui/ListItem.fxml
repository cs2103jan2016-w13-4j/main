<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" prefWidth="430.0" style="-fx-background-color: #faebcd;" styleClass="taskBox">
         <children>
            <Label fx:id="rowIndex" alignment="CENTER" focusTraversable="false" prefHeight="40.0" prefWidth="60.0" text="Index" textAlignment="CENTER">
               <font>
                  <Font name="Hammersmith One" size="16.0" />
               </font>
            </Label>
            <VBox>
               <children>
            		<Label fx:id="description" focusTraversable="false" prefWidth="375.0" text="Description" wrapText="true">
                      <font>
                         <Font name="Hammersmith One" size="14.0" />
                      </font>
                  </Label>
                  <Label fx:id="timeAndDate" focusTraversable="false" prefWidth="380.0" text="Time and Date" textFill="#575757" translateY="3.0">
                      <font>
                         <Font name="Helvetica Light" size="11.0" />
                      </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
      		 </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <Line endX="375.0" startX="-15.0" stroke="#434343" strokeLineCap="ROUND" translateX="30.0" />
   </children>
</fx:root>
